<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Type_of_Order__c</field>
        <field>Sold_to_Party__c</field>
        <field>Purchase_Order_no__c</field>
        <field>Purchase_Order_Date__c</field>
        <field>PaymentMethod__c</field>
        <field>Desc_Punctuality__c</field>
        <field>Punctuality_Discount__c</field>
        <field>SalesOrderReplacementMargin__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Approved_By_SDM_as_TRUE</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Notification_on_Approval</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>SalesDistrictManager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>IF( NOT( ISBLANK(SalesDistrictManager__c ) ), 
     CreatedById &lt;&gt; SalesDistrictManager__c,
     FALSE)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>To SDM</label>
        <name>To_SDM</name>
        <rejectionActions>
            <action>
                <name>Notification_on_Rejection</name>
                <type>Alert</type>
            </action>
            <action>
                <name>SubStatus_set_to_Rejected_by_SDM</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Notification_on_Approval</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Order_Sub_Status_Pending_By_SD</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>SalesOfficeManager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Sales_Order__c.SalesOfficeManager__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>To SOM</label>
        <name>To_SOM</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Notification_on_Rejection</name>
                <type>Alert</type>
            </action>
            <action>
                <name>SubStatus_set_to_Rejected_by_SOM</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Notification_on_Approval</name>
                <type>Alert</type>
            </action>
            <action>
                <name>SubStatus_set_to_Approved_by_SD</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>SalesDirector__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Sales_Order__c.SalesDirector__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.Type_of_Order__c</field>
                <operation>notEqual</operation>
                <value>REMESSA PARA TESTE</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>To SD</label>
        <name>To_SD</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Notification_on_Rejection</name>
                <type>Alert</type>
            </action>
            <action>
                <name>SubStatus_set_to_Rejected_by_SD</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Sub_Status_set_as_approved_by_REH</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>REH__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>To REH</label>
        <name>To_REH</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Sub_Status_set_as_rejected_by_REH</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>For Brazil SOs with type as BONIFICAÇÃO or containing Punctuality Discount. handled blank users</description>
    <emailTemplate>Brazil/New_Sales_Order_sent_for_approval</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 5 AND 6 AND ((3 OR 7) OR 4)</booleanFilter>
        <criteriaItems>
            <field>Sales_Order__c.SalesOrgCode__c</field>
            <operation>equals</operation>
            <value>5191</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Order__c.Order_Status__c</field>
            <operation>equals</operation>
            <value>Rejected,Submitted</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Order__c.Type_of_Order__c</field>
            <operation>equals</operation>
            <value>BONIFICAÇÃO</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Order__c.Punctuality_Discount__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Order__c.Type_of_Order__c</field>
            <operation>notEqual</operation>
            <value>ORDEM FILHA</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Order__c.Payment_Method_Code__c</field>
            <operation>notEqual</operation>
            <value>W</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Order__c.Type_of_Order__c</field>
            <operation>equals</operation>
            <value>REMESSA PARA TESTE</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Email_Alert_on_Sales_Order_Approve</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Order_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Brazil_SO_Approved_as_TRUE</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Call_Process_Builder_Flag_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_Alert_on_Sales_Order_Rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Order_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Uncheck_Approved_By_BM</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Uncheck_Approved_By_SDM</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Uncheck_Approved_By_SOM</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Order_Submitted_Checkbox_as_FALSE</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Order_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Order_Submitted_Checkbox_as_TRUE</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Brazil SO Approval - Punct/Boni</label>
    <processOrder>30</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
