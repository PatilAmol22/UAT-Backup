<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>TotalAmount_Argentina__c</field>
        <field>Order_Type_lk__c</field>
        <field>Order_Status__c</field>
        <field>DistributionChannelCode__c</field>
        <field>Division_lk__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>If Order is created by TM (To Manager)</description>
        <entryCriteria>
            <criteriaItems>
                <field>Sales_Order__c.Order_Raise_By__c</field>
                <operation>equals</operation>
                <value>Territory Manager</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.Sent_for_Manager_Approval_Mexico__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Paso 1: Resumen del Límite de Crédito</label>
        <name>Step_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Sales_Director_Mexico__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If Order is created by RM (To Manager)</description>
        <entryCriteria>
            <criteriaItems>
                <field>Sales_Order__c.Order_Raise_By__c</field>
                <operation>equals</operation>
                <value>Regional Manager</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.Sent_for_Manager_Approval_Mexico__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Paso 2: Buscar &amp; Agregar Producto</label>
        <name>Step_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Sales_Director_Mexico__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>To Mexico Sales Director</description>
        <entryCriteria>
            <criteriaItems>
                <field>Sales_Order__c.Sent_for_Director_Approval_Mexico__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Paso 3: Resumen de Pedido</label>
        <name>Step_3</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Latam_Director_Mexico__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>To Latam Director</description>
        <entryCriteria>
            <criteriaItems>
                <field>Sales_Order__c.Sent_for_Latam_Director_Approval__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Paso 4: Detalle de Entrega</label>
        <name>Step_4</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Latam_Director_Mexico__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If order is created by Hector Celis</description>
        <entryCriteria>
            <formula>Sold_to_Party__r.OwnerId = &apos;0050K000008lZWD&apos;</formula>
        </entryCriteria>
        <label>Paso 5:  Orden creada por Hector Celis</label>
        <name>Step_5</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Used for Mexico - updated the approval process so that all sales orders from Hector Celis should go to Jagdish - v4</description>
    <emailTemplate>Mexico/Mexico_Sales_Order_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Sales_Order__c.SalesOrgCode__c</field>
            <operation>equals</operation>
            <value>5100</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Order__c.Order_Status__c</field>
            <operation>equals</operation>
            <value>Pending</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Alert_if_Mexico_Order_is_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Order_Status_as_Open</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Rejection_Alert_if_Mexico_Order_is_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Uncheck_Sent_for_Director_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Uncheck_Sent_for_Latam_Director_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Uncheck_Sent_for_Manager_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Order_Status_as_Rejected_Step1</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Mexico Sales Order Approval Process V4</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>14</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
