<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>30000059@upl-ltd.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Sales_Order__c.SalesOrgCode__c</field>
                <operation>equals</operation>
                <value>2410</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.TotalAmount_Argentina__c</field>
                <operation>lessThan</operation>
                <value>1000</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.Order_Type_Italy__c</field>
                <operation>notEqual</operation>
                <value>Return Order</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>Send Approval To Andrea Frontali</label>
        <name>Send_Approval_To_Andrea_Frontali</name>
    </approvalStep>
    <description>Sends Approval to Andrea when Gross Net value is less than 1000 on sales order creation</description>
    <emailTemplate>Italy/SalesOrderLessThan1000</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Sales_Order__c.SalesOrgCode__c</field>
            <operation>equals</operation>
            <value>2410</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Order__c.Order_Type_Italy__c</field>
            <operation>notEqual</operation>
            <value>Return Order</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Order__c.TotalAmount_Argentina__c</field>
            <operation>lessThan</operation>
            <value>1000</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>update_SO_to_Open</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>update_SO_To_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>ItalySalesOrderGrossNet1000</label>
    <processOrder>48</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
