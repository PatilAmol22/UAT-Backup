<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Brazil_Sales_Price_Admin</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Brazil_System_Administrator</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Approval_Reason__c</field>
        <field>Cancellation_Reason__c</field>
        <field>Cancel_Comment__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>SalesDistrictManager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>SalesDistrictManager__c  &lt;&gt;  $User.Id</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Aprovação do SDM de bloqueio de pedidos</label>
        <name>SDM_Approval</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Sales_Order_cancellation_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(  ISPICKVAL( Order_Status__c , &apos;Blocked&apos;) , NOT( ISBLANK( SalesDistrictManager__c ) ))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>SDM_Approval_On_Order_Cancellation_2</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>SDM_Approval_On_Order_Cancellation_3</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>update_Cancel_Comment_to_Null</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Message_to_Blank</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Order Cancellation Approval Process</label>
    <processOrder>10</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
