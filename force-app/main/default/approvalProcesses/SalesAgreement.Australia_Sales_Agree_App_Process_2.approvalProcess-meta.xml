<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Sales_Forecast_Details__c</field>
        <field>Owner</field>
        <field>Account</field>
        <field>Name</field>
        <field>Pricebook</field>
        <field>SA_Status__c</field>
        <field>StartDate</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Submited_to_Regional_Manager</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Submitted to Reporting Manager</label>
        <name>Submitted_to_Reporting_Manager</name>
        <rejectionActions>
            <action>
                <name>Rejected_By_Reporting_Manager</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Submitted_as_Country_Head</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>vaishnavi.ahirrao@upl-ltd.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submitted to Regional Head</label>
        <name>Submitted_to_Regional_Head</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Rejected_By_Regional_Manager</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>akhilesh.kulkarni@upl-ltd.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submitted to Country Head</label>
        <name>Submitted_to_Country_Head</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>This Approval Process used for Sales Agreement Approval record.
Created By Shashank D. Shinde (04-05-2023)</description>
    <emailTemplate>Australia/Australia_SA_Approval_Request_Temp</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>IF(
AND(NOT(ISBLANK(AccountId)),
ISPICKVAL(SA_Status__c,&apos;Draft&apos;),
(CONTAINS($Profile.Name ,&quot;Australia&quot;)||
CONTAINS($Profile.Name ,&quot;System Admin&quot;))),
true,false)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved_By_National_Sales_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_as_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Rejected_By_National_Sales_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_status_as_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Submitted_to_National_Sales_Manager</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Australia Sales Agree. App Process 2</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Update_Status_as_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
