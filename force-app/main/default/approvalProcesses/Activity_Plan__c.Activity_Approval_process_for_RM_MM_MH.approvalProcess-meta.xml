<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Activity_Type__c</field>
        <field>No_of_R1_invited__c</field>
        <field>No_of_farmer_invited__c</field>
        <field>Start_Date__c</field>
        <field>End_Date__c</field>
        <field>Crop__c</field>
        <field>Time__c</field>
        <field>Territory_Name__c</field>
        <field>Region_Name__c</field>
        <field>Owner</field>
        <field>Activity_Cost__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>RM_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Regional_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Activity_Plan__c.RM_Approval_Status__c</field>
                <operation>notEqual</operation>
                <value>Approved</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Step 1</label>
        <name>Step_1</name>
        <rejectionActions>
            <action>
                <name>Marketing_Flag</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>RM_rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Sent_for_approval_RM</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>MM_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Send_Email_to_MH_once_MM_approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Zonal_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Activity_Plan__c.RM_Approval_Status__c</field>
                <operation>equals</operation>
                <value>Approved</value>
            </criteriaItems>
            <criteriaItems>
                <field>Activity_Plan__c.Zonal_Manager__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Approval for MM</label>
        <name>Approval_for_MM</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Marketing_Flag_MM</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>MM_rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>RM_pending</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Sent_for_approval_MM</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Marketing_Activity_Appro</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>MH_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>20008182@upl-ltd.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Activity_Plan__c.RM_Approval_Status__c</field>
                <operation>equals</operation>
                <value>Approved</value>
            </criteriaItems>
            <criteriaItems>
                <field>Activity_Plan__c.MM_Approval_Status__c</field>
                <operation>equals</operation>
                <value>Approved</value>
            </criteriaItems>
            <criteriaItems>
                <field>Activity_Plan__c.Activity_Cost__c</field>
                <operation>greaterThan</operation>
                <value>&quot;IDR 3,000,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <label>MH Approval</label>
        <name>MH_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Marketing_Activity_rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Marketing_Flag</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>MH_approval_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>MM_Pending</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>RM_pending</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Sent_for_Approval</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>Delta/Marketing_Requisition_Activity</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4</booleanFilter>
        <criteriaItems>
            <field>Activity_Plan__c.RecordType</field>
            <operation>equals</operation>
            <value>Marketing Requisiton</value>
        </criteriaItems>
        <criteriaItems>
            <field>Activity_Plan__c.Regional_Manager__c</field>
            <operation>notEqual</operation>
            <value>null</value>
        </criteriaItems>
        <criteriaItems>
            <field>Activity_Plan__c.Zonal_Manager__c</field>
            <operation>notEqual</operation>
            <value>null</value>
        </criteriaItems>
        <criteriaItems>
            <field>Activity_Plan__c.Marketing_Activity_Status__c</field>
            <operation>notEqual</operation>
            <value>Approved</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Email_Alert_to_indonesia_users</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Marketing_Activity_Appro</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>MH_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Marketing_Activity_rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>MH_Approval_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Activity Approval process for RM -MM-MH</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
