<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Type_of_Order__c</field>
        <field>Sold_to_Party__c</field>
        <field>Purchase_Order_no__c</field>
        <field>Purchase_Order_Date__c</field>
        <field>PaymentMethod__c</field>
        <field>Desc_Punctuality__c</field>
        <field>Punctuality_Discount__c</field>
        <field>SalesOrderReplacementMargin__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>CreatedBy</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>1=0</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Auto Approve</label>
        <name>Auto_Approve</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>sadmin@upl.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Sales_Order__c.Approval_Flag_Count__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
        </entryCriteria>
        <label>Dummy Step</label>
        <name>Dummy_Step</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>For Brazil SOs that should be auto approved when Created by SOM</description>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND( NOT(ISBLANK(SalesOfficeManager__c)), 
CreatedById = SalesOfficeManager__c
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Check_Internal_Check_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_Alert_on_Sales_Order_Approve</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Order_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Brazil_SO_Approved_as_TRUE</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Order_Sub_Status_Approved_by_SOM</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Call_Process_Builder_Flag_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_Alert_on_Sales_Order_Rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Order_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Uncheck_Approved_By_BM</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Uncheck_Approved_By_SDM</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Uncheck_Approved_By_SOM</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Order_Submitted_Checkbox_as_FALSE</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Order_Submitted_Checkbox_as_TRUE</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Brazil SO Auto Approval(SOM)</label>
    <processOrder>41</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
