<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>To Manager</description>
        <entryCriteria>
            <booleanFilter>(1 AND 2) OR (1 AND 3)</booleanFilter>
            <criteriaItems>
                <field>Sales_Order__c.InternalApprovalCheck__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.BudgetApprovalCheck__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.BudgetApprovalCheck__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>20000065@upl-ltd.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>To India HO</description>
        <entryCriteria>
            <booleanFilter>(1 AND 2) OR (2 AND 3)</booleanFilter>
            <criteriaItems>
                <field>Sales_Order__c.InternalApprovalCheck__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.BudgetApprovalCheck__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.InternalApprovalCheck__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <label>Step 3</label>
        <name>Step_3</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Used for Argentina (ver1.4) - changed on 31.10.2018 - Skip Level 2 (Argentina HO) as the user is not available.</description>
    <emailTemplate>Argentina/Argentina_Sales_Order_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Sales_Order__c.SalesOrgCode__c</field>
            <operation>equals</operation>
            <value>5631</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Order__c.Order_Status__c</field>
            <operation>equals</operation>
            <value>Pending</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Argentina_Email_on_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Order_Submitted_Check_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Order_Status_as_Open</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Argentina_Email_on_Rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Order_Submitted_Check_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Order_Status_as_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Argentina_Order_Submitted_for_App</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Argentina Sales Order Approval Process</label>
    <processOrder>9</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
