        </approvalActions>
        <assignedApprover>
            <approver>
                <name>SalesDistrictManager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>OR( 
AND( Approval_Flag_Count__c &gt; 0, 
NOT (ISBLANK(SalesDistrictManager__c ) ), 
CreatedById &lt;&gt; SalesDistrictManager__c 
), 
AND( NOT (ISBLANK(SalesDistrictManager__c ) ), 
CreatedById = SalesDistrictManager__c, 
OR(ISPICKVAL( OrderSubStatus__c ,&apos;Rejected by Sales Office Manager&apos;), 
ISPICKVAL( OrderSubStatus__c ,&apos;Rejected by director&apos;), 
ISPICKVAL( OrderSubStatus__c ,&apos;Rejected by manager&apos;) 
), 
Approval_Flag_Count__c &gt; 0 
) 
)</formula>
        </entryCriteria>
