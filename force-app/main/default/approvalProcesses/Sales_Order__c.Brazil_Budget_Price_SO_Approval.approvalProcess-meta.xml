        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Approved_By_SDM_as_TRUE</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Notification_on_Approval</name>
                <type>Alert</type>
