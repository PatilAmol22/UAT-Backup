                <name>SalesOfficeManager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Scenario: 
Created by SP, SDM = NULL, Flag Count = 1</description>
        <entryCriteria>
            <formula>AND(OR(CreatedById = OwnerId, Key_Account__c == TRUE), 
Approval_Flag_Count__c == 1, 
ISBLANK(SalesDistrictManager__c), 
NOT(ISBLANK(SalesOfficeManager__c)))</formula>
        </entryCriteria>
