                <name>SalesDirector__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Handled Scenario: Flag Count = 1, SDM = Null, SOM = Null</description>
        <entryCriteria>
            <booleanFilter>((1 AND 2) OR 3 OR (4 AND 5 AND 6)) AND 7</booleanFilter>
            <criteriaItems>
                <field>Sales_Order__c.Approval_Flag_Count__c</field>
                <operation>greaterOrEqual</operation>
                <value>2</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.SalesOfficeManager__c</field>
                <operation>equals</operation>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.Approval_Flag_Count__c</field>
                <operation>greaterThan</operation>
                <value>2</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.Approval_Flag_Count__c</field>
                <operation>equals</operation>
                <value>1</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.SalesDistrictManager__c</field>
                <operation>equals</operation>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.SalesOfficeManager__c</field>
                <operation>equals</operation>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.Type_of_Order__c</field>
                <operation>notEqual</operation>
                <value>REMESSA PARA TESTE</value>
            </criteriaItems>
