<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Approved_By_SDM_as_TRUE</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Order_Sub_Status_Approved_By_SDM</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>SalesDistrictManager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If SDM is not blank &amp; created by SP then level 1 to SDM</description>
        <entryCriteria>
            <formula>AND(CreatedById = OwnerId,
    NOT(ISBLANK(SalesDistrictManager__c)),
    OR(ISPICKVAL( OrderSubStatus__c ,&apos;Draft&apos;),
       ISPICKVAL( OrderSubStatus__c ,&apos;Rejected by manager&apos;),
       ISPICKVAL( OrderSubStatus__c ,&apos;Rejected by Regional Head&apos;),
       ISPICKVAL( OrderSubStatus__c ,&apos;Rejected by Global Sales Director&apos;) 
       )   
     )</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Step 1</label>
        <name>Step_1</name>
        <rejectionActions>
            <action>
                <name>Updt_Order_Sub_Status_Rejected_By_SDM_1</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Approved_By_REH_as_TRUE</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Order_Sub_Status_Pending_at_GSD</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>REH__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>To REH</description>
        <entryCriteria>
            <booleanFilter>1</booleanFilter>
            <criteriaItems>
                <field>Sales_Order__c.BudgetApprovalCheck__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Step 2</label>
        <name>Step_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Update_Order_Sub_Status_Rejected_By_REH</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Order_Sub_Status_Approve_By_GSD</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>GSD__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>To GSD</description>
        <entryCriteria>
            <booleanFilter>1</booleanFilter>
            <criteriaItems>
                <field>Sales_Order__c.BudgetApprovalCheck__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <label>Step 3</label>
        <name>Step_3</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Update_Order_Sub_Status_Rejected_By_GSD</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Used for Brazil: Structured Sales Order ver_1.3 (updated for &apos;created by SDM &amp; Budget Price order&apos; scenario)</description>
    <emailTemplate>Brazil/Structure_Order_sent_for_approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 AND 2 AND (3 OR 4)) OR (1 AND 2 AND 5 AND (3 OR 4))</booleanFilter>
        <criteriaItems>
            <field>Sales_Order__c.SalesOrgCode__c</field>
            <operation>equals</operation>
            <value>5191</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Order__c.Campaign_Type__c</field>
            <operation>equals</operation>
            <value>Structured</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Order__c.Order_Status__c</field>
            <operation>equals</operation>
            <value>Rejected</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Order__c.Order_Status__c</field>
            <operation>equals</operation>
            <value>Submitted</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Order__c.BudgetApprovalCheck__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Alert_for_Structure_Order_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Order_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Brazil_SO_Approved_as_TRUE</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Alert_for_Structure_Order_Rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Call_Process_Builder_Flag_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Order_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Uncheck_Approved_By_SDM</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Order_Submitted_Checkbox_as_FALSE</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Order_Status_as_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Order_Submitted_Checkbox_as_TRUE</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Brazil SO Approval - Structured Order</label>
    <processOrder>8</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
