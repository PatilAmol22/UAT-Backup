<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Activity_Type__c</field>
        <field>Start_Date__c</field>
        <field>End_Date__c</field>
        <field>Location__c</field>
        <field>No_of_farmer_invited__c</field>
        <field>No_of_R1_invited__c</field>
        <field>Settlement_Number__c</field>
        <field>Time__c</field>
        <field>Territory_Name__c</field>
        <field>Region_Name__c</field>
        <field>Owner</field>
        <field>Activity_Cost__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>RM_Settlement_Status</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Regional_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Activity_Plan__c.RM_Settlement_Status__c</field>
                <operation>notEqual</operation>
                <value>Approved</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Step 1</label>
        <name>Step_1</name>
        <rejectionActions>
            <action>
                <name>RM_Settlement_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Sent_for_Approval_Settlement_RM</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Settlement_Flag_RM1</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>MM_Settlement_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Send_Email_to_MH_once_MM_approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Zonal_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Activity_Plan__c.RM_Settlement_Status__c</field>
                <operation>equals</operation>
                <value>Approved</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>MM Approval</label>
        <name>MM_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>MM_Settlement_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>RM_Settlement_Pending1</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Marketing_Settlement_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>MH_Settlement_Approved1</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>20008182@upl-ltd.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Activity_Plan__c.MM_Settlement_Status__c</field>
                <operation>equals</operation>
                <value>Approved</value>
            </criteriaItems>
            <criteriaItems>
                <field>Activity_Plan__c.Activity_Cost__c</field>
                <operation>greaterThan</operation>
                <value>&quot;IDR 3,000,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <label>MH Approval</label>
        <name>MH_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Marketing_settlement_rejected1</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>MH_settlement_Rejected1</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>MM_Settlement_Pending</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>RM_Settlement_Pending1</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>Delta/Marketing_Requisition_Settlement</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5 AND 6</booleanFilter>
        <criteriaItems>
            <field>Activity_Plan__c.Zonal_Manager__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Activity_Plan__c.Regional_Manager__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Activity_Plan__c.Marketing_Activity_Status__c</field>
            <operation>equals</operation>
            <value>Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Activity_Plan__c.RecordType</field>
            <operation>equals</operation>
            <value>Settlement</value>
        </criteriaItems>
        <criteriaItems>
            <field>Activity_Plan__c.Marketing_Settlement_Status__c</field>
            <operation>notEqual</operation>
            <value>Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Activity_Plan__c.Item_Rollup__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Marketing_Settlement_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>MH_settlement_approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Marketing_settlement_rejected1</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Sent_for_Approval_Settlement_MM</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Settlement_Flag_MM</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>MH_settlement_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Settlement Approval Process RM-MM-MH</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>RegionalManager__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
