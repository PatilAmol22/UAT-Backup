        <name>Level_1_Sales_Co_ordinator</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>20012437@upl-ltd.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If Payment days is &gt;270 need to be approved by Sub Region Head</description>
