<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Type_of_Order__c</field>
        <field>Sold_to_Party__c</field>
        <field>Purchase_Order_no__c</field>
        <field>Purchase_Order_Date__c</field>
        <field>Payment_Method_Mexico__c</field>
        <field>Desc_Punctuality__c</field>
        <field>Punctuality_Discount__c</field>
        <field>SalesOrderReplacementMargin__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>sub_Status_as_Pending_at_Brazil_CCO</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>20004743@upl-ltd.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Sales_Order__c.AVEC_Order__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>To Directed Sales</label>
        <name>To_Directed_Sales</name>
        <rejectionActions>
            <action>
                <name>Directed_sales_Brazil</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Approved_By_Brazil_CCO_as_True</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>sub_Status_as_Pending_at_Global_CCO</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>20008198@upl-ltd.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Sales_Order__c.Type_of_Order__c</field>
                <operation>notEqual</operation>
                <value>ORDEM FILHA</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.Sent_for_Latam_Director_Approval__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>To Brazil CCO</label>
        <name>To_Brazil_CCO</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>sub_Status_as_Rejected_By_Brazil_CCO</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>20000065@upl-ltd.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Sales_Order__c.Sent_for_Latam_Director_Approval__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.Sent_for_CCO__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.Type_of_Order__c</field>
                <operation>notEqual</operation>
                <value>ORDEM FILHA</value>
            </criteriaItems>
        </entryCriteria>
        <label>To Global CCO</label>
        <name>To_Global_CCO</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>sub_Status_as_Rejected_By_Global_CCO</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>Brazil/Brazil_SO_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>Sales_Order__c.SalesOrgCode__c</field>
            <operation>equals</operation>
            <value>5191</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Order__c.Call_Margin_Block_Approval__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Order_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Order_Sub_Status_to_AutoApproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Uncheck_Internal_Approval_checkbox</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Brazil_SO_Approved_as_TRUE</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Call_Process_Builder_Flag_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Order_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Uncheck_Approved_By_Brazil_CCO</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Uncheck_Internal_Approval_checkbox</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Order_Submitted_Checkbox_as_FALSE</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Order_Status_as_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Order_Submitted_Checkbox_as_TRUE</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Brazil SO Approval(Directed Sales &amp;CCO)</label>
    <processOrder>40</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
