<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>CreatedDate</field>
        <field>Account</field>
        <field>Sub_Category__c</field>
        <field>Status</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Owner</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>(1 OR 2) AND 3</booleanFilter>
            <criteriaItems>
                <field>Case.catesub__c</field>
                <operation>equals</operation>
                <value>Request</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.catesub__c</field>
                <operation>equals</operation>
                <value>Complaint</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Record_Type__c</field>
                <operation>equals</operation>
                <value>Distributor</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND (2 OR 3) AND 4 AND 5</booleanFilter>
        <criteriaItems>
            <field>Case.Record_Type__c</field>
            <operation>equals</operation>
            <value>Distributor</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.catesub__c</field>
            <operation>equals</operation>
            <value>Complaint</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.catesub__c</field>
            <operation>equals</operation>
            <value>Request</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Status</field>
            <operation>equals</operation>
            <value>Closed</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Sub_Category__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Case_Closed_status</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Case_Reopen_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CheckTillUpdate_24HrsTrue</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Escalation_Level_Set_Blank</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Is_Auto_Escalated_Set_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Level2_set_blank</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>level3_set_blank</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>India Case Module Case Close</label>
    <processOrder>11</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
