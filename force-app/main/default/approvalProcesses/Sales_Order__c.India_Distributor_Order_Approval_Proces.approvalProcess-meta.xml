<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Sold_to_Party__c</field>
        <field>Order_Status__c</field>
        <field>Territory__c</field>
        <field>CreatedBy</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>TerritoryManager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>To TM if Not BLANK</description>
        <entryCriteria>
            <criteriaItems>
                <field>Sales_Order__c.TerritoryManager__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>SalesOfficeManager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>To ZSM if TM is blank or if TM approved</description>
        <entryCriteria>
            <criteriaItems>
                <field>Sales_Order__c.TerritoryManager__c</field>
                <operation>equals</operation>
            </criteriaItems>
            <criteriaItems>
                <field>Sales_Order__c.SalesOfficeManager__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <label>Step 2</label>
        <name>Step_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>This approval process is used for India orders created by Distributors.</description>
    <emailTemplate>India/India_Sales_Order_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Sales_Order__c.SalesOrgCode__c</field>
            <operation>equals</operation>
            <value>1410</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sales_Order__c.Order_Status__c</field>
            <operation>equals</operation>
            <value>Pending</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>India_Approval_Email_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Order_Status_as_Open</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Order_Sub_Status_as_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>India_Rejection_Email_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Order_Status_as_Rejected_Step1</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Order_Sub_Status_as_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>India Distributor Order Approval Proces</label>
    <processOrder>7</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
